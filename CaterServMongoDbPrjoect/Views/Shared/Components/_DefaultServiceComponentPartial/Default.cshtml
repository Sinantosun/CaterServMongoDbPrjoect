@model List<ResultServiceDto>
<div class="container-fluid service py-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Hizmetlerimiz</small>
            <h1 class="display-5 mb-5">En iyi İşimiz!</h1>
        </div>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 wow bounceInUp" data-wow-delay="0.1s">
                    <div class="bg-light rounded service-item">
                        <div class="service-content d-flex align-items-center justify-content-center p-4">
                            <div class="service-content-icon text-center">
                                <i class="@item.Icon fa-7x text-primary mb-4"></i>
                                <h4 class="mb-3">@item.Title</h4>
                                <p class="mb-4">@item.Descripition</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

