@model List<ResultEventDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Etkinlik Listesi</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-muted table-responsive-sm">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Gösel</td>
                            <td>Kategori</td>
                            <td class="text-center" colspan="2">İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.ImageURL</td>
                                <td>@item.EventCategory.CategoryName</td>
                                <td style="width:100px" class="text-center">
                                    <a href="/Admin/Event/DeleteEvent/@item.EventId" class="btn btn-outline-danger"> <i class="fa fa-trash"></i> Sil</a>

                                </td>
                                <td style="width:130px" class="text-center">
                                    <a href="/Admin/Event/UpdateEvent/@item.EventId" class="btn btn-outline-success"><i class="fa fa-edit"></i> Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Event/CreateEvent" class="btn btn-outline-primary"> <i class="fa fa-pencil"></i> Yeni Etkinlik Oluştur</a>
            </div>
        </div>
    </div>
</div>




