@model CreateEventDto
@{
    ViewData["Title"] = "CreateEvent";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Yeni Öne Çıkan Ekleme Sayfası</h4>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post" enctype="multipart/form-data">
                        <label>Görsel</label>
                        <input type="file" class="form-control" asp-for="File" />
                        <br />
                        <label>Kategori Seçiniz</label>
                        <select asp-for="EventCategoriesId" asp-items="@ViewBag.EventCategoryList" class="form-control"></select>
                        <br />
                        <button class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



