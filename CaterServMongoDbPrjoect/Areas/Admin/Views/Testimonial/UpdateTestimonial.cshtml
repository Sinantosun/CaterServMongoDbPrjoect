@model UpdateTestimonailDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Referans Ekleme Sayfası</h4>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" class="form-control" asp-for="TestimonialId" />
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <br />
                        <label>Yıldız (0-5)</label>
                        <input type="text" class="form-control" asp-for="Star" />
                        <br />
                        <label>Görsel</label>
                        <input type="file" class="form-control" asp-for="File" />
                        <br />
                        <label>Yorum</label>
                        <textarea type="text" rows="5" class="form-control" asp-for="Commet"></textarea>
                        <br />

                        <button class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


