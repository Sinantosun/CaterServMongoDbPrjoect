@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4> Ürün Güncelleme Sayfası</h4>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post">
                        <label>Ürün Adı</label>
                        <input type="hidden" class="form-control" asp-for="ProductId" />
                        <input type="text" class="form-control" asp-for="ProductName" />
                        <br />
                        <label>Resim</label>
                        <input type="text" class="form-control" asp-for="ImageURL" />
                        <br />
                        <label>Fiyat</label>
                        <input type="text" class="form-control" asp-for="Price" />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <br />
                        <label>kategori</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"></select>
                        <br />
                        <button class="btn btn-outline-primary"> <i class="fa fa-edit"></i> Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
