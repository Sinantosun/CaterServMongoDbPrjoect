@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Ürünlerin Listeleri..</h1>
<br />

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Ürün Adı</td>
        <td>Ürün Açıklaması</td>
        <td>Ürün Fiyat</td>
        <td colspan="2">İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageURL" style="width:75px; height:75px;"  /></td>
            <td>@item.ProductName</td>
            <td>@item.Description</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
  
            <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Admin/Product/AddProduct" class="btn btn-outline-info">Yeni Ürün Oluştur</a>